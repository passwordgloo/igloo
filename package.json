{
  "name": "igloo",
  "description": "road",
  "version": "0.0.3",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vuepress-vite build src",
    "clean-dev": "vuepress-vite dev src --clean-cache",
