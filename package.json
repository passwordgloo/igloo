    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@vuepress/bundler-vite": "2.0.0-rc.14",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-git": "^1.9.4",
    "mathjax-full": "^3.2.2",
    "vue": "^3.4.35",
    "vuepress": "2.0.0-rc.14",
    "vuepress-theme-hope": "2.0.0-rc.52"
  }
}
